    private void setPage(String Name1, String Name2) {
        new Thread(() -> {
            try {
                area1.append("Thread 1 : start\n");
                area1.append("Thread 1 : get page url =" + Name1 + "\n");
                editorPane.setPage(Name1);
                area1.append("Thread 1 : stop\n");
                getHttpResponse(Name1, "Thread 1");
            } catch (IOException ex) {
                
            }
        }).start();
        
        new Thread(() -> {
            try {
                area2.append("Thread 2 : start\n");
                area2.append("Thread 2 : get page url =" + Name2 + "\n");
                editorPane2.setPage(Name2);
                area2.append("Thread 2 : stop\n");
                getHttpResponse(Name2, "Thread 2");
            } catch (IOException ex) {
                
            }
        }).start(); //To change body of generated methods, choose Tools | Templates.
    }

    private void getHttpResponse(String url, String thread) {
        try {
            
            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            Map<String, java.util.List<String>> map = conn.getHeaderFields();

            for (Map.Entry<String, java.util.List<String>> entry : map.entrySet()) {
                if (thread.equals("Thread 1")) {
                    area1.append(thread + " " + entry.getKey() + " : " + entry.getValue() + "\n");
                } 
                if (thread.equals("Thread 2")){
                    area2.append(thread + " " + entry.getKey() + " : " + entry.getValue() + "\n");
                }
            }
            
        } catch (Exception e) {
            e.printStackTrace();
        } //To change body of generated methods, choose Tools | Templates.
    }

    
